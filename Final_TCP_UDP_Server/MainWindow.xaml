<Window x:Class="RPS_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RPS Server" Height="500" Width="600" 
        mc:Ignorable="d">
    <Grid>
        <materialDesign:Card Width="500" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Button Content="Start Server" Click="StartServerButton_Click" Margin="20" Width="200" Style="{StaticResource MaterialDesignRaisedButton}" />
                <TextBlock x:Name="StatusTextBlock" Margin="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
                <TextBlock x:Name="GameHistoryTextBlock" Margin="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>